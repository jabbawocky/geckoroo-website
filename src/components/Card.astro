---
export interface Props {
  title: string;
  slug: string;
  category: string;
  blurb: string;
  priceHint: string;
  image: string;
  badges?: string[];
  featured?: boolean;
}

const { title, slug, category, blurb, priceHint, image, badges = [], featured = false } = Astro.props;
---

<article class={`group bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow ${featured ? 'ring-2 ring-gecko-500' : ''}`}>
  <div class="relative aspect-[4/3] overflow-hidden bg-gray-100 dark:bg-gray-700">
    <img
      src={image}
      alt={title}
      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
      loading="lazy"
    />
    {badges && badges.length > 0 && (
      <div class="absolute top-2 left-2 flex flex-wrap gap-2">
        {badges.map((badge) => (
          <span class="px-2 py-1 text-xs font-semibold bg-gecko-500 text-white rounded-full">
            {badge}
          </span>
        ))}
      </div>
    )}
    <div class="absolute top-2 right-2">
      <span class="px-2 py-1 text-xs font-semibold bg-gray-900/75 text-white rounded">
        {category}
      </span>
    </div>
  </div>

  <div class="p-4">
    <h3 class="font-bold text-lg mb-2 text-gray-900 dark:text-white line-clamp-2">
      {title}
    </h3>

    <p class="text-gray-600 dark:text-gray-400 text-sm mb-3 line-clamp-2">
      {blurb}
    </p>

    <div class="flex items-center justify-between mb-4">
      <span class="text-gecko-600 dark:text-gecko-400 font-semibold">
        {priceHint}
      </span>
    </div>

    <div class="flex gap-2">
      <a
        href={`/go/${slug}`}
        target="_blank"
        rel="sponsored nofollow noopener"
        class="flex-1 bg-gecko-600 hover:bg-gecko-700 text-white py-2 px-4 rounded text-center text-sm font-semibold transition-colors"
      >
        See Price
      </a>
      <button
        data-modal-trigger={slug}
        class="flex-1 border border-gray-300 dark:border-gray-600 hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-700 dark:text-gray-300 py-2 px-4 rounded text-center text-sm font-semibold transition-colors"
      >
        Why we like it
      </button>
    </div>
  </div>
</article>

<style>
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>