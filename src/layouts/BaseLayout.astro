---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "GeckoRoo - Stuff we've tried, abused, or built with. If it survives, it gets a shout." } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | GeckoRoo</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fredoka:wght@400;500;600;700&family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">

    <!-- Plausible Analytics placeholder -->
    <!-- <script defer data-domain="geckoroo.com" src="https://plausible.io/js/script.js"></script> -->

    <!-- Dark mode script -->
    <script is:inline>
      const theme = (() => {
        if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
          return localStorage.getItem('theme');
        }
        if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
          return 'dark';
        }
        return 'light';
      })();

      if (theme === 'dark') {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>
  <body class="bg-brand-sand dark:bg-brand-navy text-brand-navy dark:text-brand-sand min-h-screen flex flex-col font-body">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style is:global>
  :root {
    --brand-orange: #F97316;
    --brand-yellow: #FFD700;
    --brand-navy: #1E1B4B;
    --brand-sand: #FFFDF7;
  }

  html {
    font-family: 'Inter', system-ui, sans-serif;
  }

  h1, h2, h3, h4, h5, h6 {
    font-family: 'Fredoka', system-ui, sans-serif;
  }

  .pagefind-ui__search-input {
    @apply dark:bg-brand-navy/50 dark:text-brand-sand border-brand-orange/20;
  }

  /* Smooth transitions for dark mode */
  * {
    @apply transition-colors duration-200;
  }
</style>